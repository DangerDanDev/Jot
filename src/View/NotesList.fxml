<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox nodeOrientation="RIGHT_TO_LEFT">
         <children>
            <Button fx:id="bDeleteNote" disable="true" mnemonicParsing="false" onAction="#deleteSelectedNote" text="Delete" />
          <Button fx:id="bOpenNote" disable="true" mnemonicParsing="false" onAction="#showNote" text="Open" />
            <Button fx:id="bAddNote" mnemonicParsing="false" onAction="#addNote" text="Add" />
            <Separator opacity="0.0" HBox.hgrow="ALWAYS" />
            <TextField fx:id="tfQuery" nodeOrientation="LEFT_TO_RIGHT" promptText="Search" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets right="8.0" />
         </padding>
      </HBox>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="List">
               <content>
                  <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="titleColumn" prefWidth="220.0" text="Title" />
                      <TableColumn fx:id="lastEditedColumn" prefWidth="79.0" text="Last Edited" />
                    </columns>
                  </TableView>
               </content>
          </Tab>
          <Tab text="Grid">
               <content>
                  <ScrollPane>
                     <content>
                        <GridPane fx:id="gpNotePreviews" hgap="8.0" vgap="8.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <padding>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </padding>
                        </GridPane>
                     </content>
                  </ScrollPane>
               </content>
          </Tab>
            <Tab text="Flow">
               <content>
                  <ScrollPane fitToHeight="true" fitToWidth="true">
                     <content>
                        <FlowPane fx:id="fpNotePreviews" hgap="8.0" vgap="8.0">
                           <padding>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </padding>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
