<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minWidth="400.0" prefHeight="400.0" prefWidth="600.0" styleClass="background" stylesheets="@../Style/style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NoteController">
   <children>
      <HBox id="topbar" onMouseDragged="#dragStage" onMousePressed="#startDrag" prefWidth="200.0" styleClass="topbar">
         <children>
            <Button mnemonicParsing="false" onAction="#addNewNote">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Content/add.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <TextField fx:id="tfNoteTitle" prefHeight="25.0" prefWidth="142.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="16.0" top="4.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#closeStage">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Content/exit.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets top="4.0" />
         </padding>
      </HBox>
      <TextArea fx:id="taNoteContent" prefHeight="200.0" prefWidth="200.0" wrapText="true" VBox.vgrow="ALWAYS" />
      <HBox nodeOrientation="RIGHT_TO_LEFT" onMouseDragged="#resize" onMousePressed="#startResize" prefWidth="200.0" VBox.vgrow="NEVER">
         <children>
            <ImageView fitHeight="24.0" fitWidth="24.0" onMouseDragged="#dragStage" onMousePressed="#startDrag" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Content/drag.png" />
               </image>
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin>
            </ImageView>
            <CheckBox fx:id="cbKeepOnTop" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#toggleKeepOnTop" text="Always on Top">
               <padding>
                  <Insets right="4.0" />
               </padding>
               <HBox.margin>
                  <Insets top="3.0" />
               </HBox.margin></CheckBox>
            <Separator opacity="0.0" prefHeight="0.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#showNotesList" text="View All Notes" />
         </children>
      </HBox>
   </children>
</VBox>
